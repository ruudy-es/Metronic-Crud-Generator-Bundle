{% extends 'RuudyMetronicBundle:metronic:layouts/login.html.twig' %}

{% block body_class %}login{% endblock %}

{% block content %}

    <!-- BEGIN LOGO -->
    {% embed 'RuudyMetronicBundle:metronic:pieces/login/logo.html.twig' %}
        {% block home_path %}
            {#{{ path('_welcome') }}#}
        {% endblock %}
        {% block logo_login_path %}
            {{ asset('img/logo.png') }}
        {% endblock %}
    {% endembed %}
    <!-- END LOGO -->

    <!-- BEGIN LOGIN -->
    <div class="content">
        <!-- BEGIN LOGIN FORM -->
        {% embed 'RuudyMetronicBundle:metronic:pieces/login/login_form.html.twig' %}

            {% block form_action %}
                {{ path('kern_backend_login_check') }}
            {% endblock %}

            {% block csrf_token %}
                <input type="hidden" name="_csrf_token"
                       value="{{ csrf_token('authenticate') }}"
                        >
            {% endblock %}

            {% block form_title %}
                Login to your account
            {% endblock %}

            {% block form_errors %}
                <div class="alert alert-danger">
                    <button class="close" data-close="alert"></button>
                    <span>{{ error.message }} </span>
                </div>
            {% endblock %}

            {% block form_inputs %}
                <div class="form-group">
                    <!--ie8, ie9 does not support html5 placeholder, so we just show field title for that-->
                    <label class="control-label visible-ie8 visible-ie9">Username</label>
                    <div class="input-icon">
                        <i class="fa fa-user"></i>
                        <input class="form-control placeholder-no-fix" type="text" autocomplete="off" placeholder="Username" name="_username"/>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label visible-ie8 visible-ie9">Password</label>
                    <div class="input-icon">
                        <i class="fa fa-lock"></i>
                        <input class="form-control placeholder-no-fix" type="password" autocomplete="off" placeholder="Password" name="_password"/>
                    </div>
                </div>
            {% endblock %}

            {% block form_actions %}
                <label class="checkbox"></label>
                <button type="submit" class="btn green pull-right">
                    Login <i class="m-icon-swapright m-icon-white"></i>
                </button>
            {% endblock %}

        {% endembed %}
        <!-- END LOGIN FORM -->
    </div>
    <!-- END LOGIN -->

    <!-- BEGIN COPYRIGHT -->
    {% embed 'RuudyMetronicBundle:metronic:pieces/login/copyright.html.twig' %}
        {% block copyright %}
            2014 &copy; Kern.
        {% endblock %}
    {% endembed %}
    <!-- END COPYRIGHT -->

{% endblock %}