{% extends 'ApplicationMetronicBackEndBundle:layouts:admin.html.twig' %}

{% block head %}
    {# TODO #}
    {% embed 'RuudyMetronicBundle:metronic:zones/head.html.twig' %}
        {% block page_stylesheets %}
            <link href="{{ asset('bundles/applicationmetronic/global/plugins/select2/select2.css') }}" rel="stylesheet" type="text/css"/>
            <link href="{{ asset('bundles/applicationmetronic/global/plugins/data-tables/DT_bootstrap.css') }}" rel="stylesheet" type="text/css"/>
        {% endblock %}
    {% endembed %}
{% endblock %}

{% block javascripts %}
    {% embed 'RuudyMetronicBundle:metronic:zones/javascripts.html.twig' %}
        {% block page_level_plugin_javascripts %}
            <script src="{{ asset('bundles/applicationmetronic/global/plugins/select2/select2.min.js') }}"></script>
            <script src="{{ asset('bundles/applicationmetronic/global/plugins/data-tables/jquery.dataTables.min.js') }}"></script>
            <script src="{{ asset('bundles/applicationmetronic/global/plugins/data-tables/tabletools/js/dataTables.tableTools.min.js') }}"></script>
            <script src="{{ asset('bundles/applicationmetronic/global/plugins/data-tables/DT_bootstrap.js') }}"></script>
        {% endblock %}

        {% block page_level_javascripts %}
            <script src="{{ asset('bundles/applicationmetronic/global/scripts/metronic.js') }}"></script>
            <script src="{{ asset('bundles/applicationmetronic/admin/layout/scripts/layout.js') }}"></script>
            <script src="{{ asset('bundles/ruudymetroniccrudgenerator/js/advanced_tables.js') }}"></script>
        {% endblock %}

        {% block init_javascripts %}
            <script>
                jQuery(document).ready(function() {
                    Metronic.init(); // init metronic core components
                    Layout.init(); // init current layout
                    TableAdvanced.init();
                });
            </script>
        {% endblock %}
    {% endembed %}
{% endblock %}